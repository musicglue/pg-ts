{
  "name": "pg-ts",
  "version": "3.0.1-0",
  "main": "dist/index.js",
  "types": "dist/",
  "module": "src/index.ts",
  "repository": "https://github.com/musicglue/pg-ts",
  "author": "Music Glue",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/  && tsc",
    "format": "prettier --write --list-different --parser ${npm_package_prettier_parser} --trailing-comma ${npm_package_prettier_trailingComma} --print-width ${npm_package_prettier_printWidth} 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/knexfile.ts",
      "<rootDir>/src/db.ts",
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/support/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.ts",
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*_test\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "fp-ts": "1.4.0",
    "io-ts": "1.0.6",
    "lodash": "^4.17.10",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/pg": "^7.4.8",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "trailingComma": "all"
  }
}
