{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ]
}